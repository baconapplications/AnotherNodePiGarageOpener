{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "rootDir": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "lib": ["es6", "dom"]
  },
  "exclude": [
        "node_modules",
        ".vscode",
        "typings"
    ],
    "awesomeTypescriptLoaderOptions": {
      "useWebpackText": true
    },
    "angularCompilerOptions": {
      "debug": false
    },
    "compileOnSave": false,
    "buildOnSave": false
}